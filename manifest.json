{
  "name": "Email Self, Myself or Me!",
  "version": "1.0",
  "manifest_version": 3,
  "description": "Email yourself the current webpage with the webpage title as the email subject and the URL as the email body",
  "permissions": [
    "activeTab",
    "storage",
    "identity",
    "https://mail.google.com/",
    "https://www.googleapis.com/auth/gmail.send"
  ],
  "action": {
    "default_icon": {
      "16": "icon-16.png",
      "32": "icon-32.png",
      "48": "icon-48.png",
      "128": "icon-128.png"
    },
    "default_title": "Email Self, Myself or Me!",
    "default_popup": "popup.html"
  },
  "background": {
    "service_worker": "background.js"
  }
}
